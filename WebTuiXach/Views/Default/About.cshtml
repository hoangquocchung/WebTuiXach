@model Data.FE.Contact
    @{
        ViewBag.Title = "About";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <style>
        #map {
            width: 100%;
            height: 700px;
        }
    </style>
    @section jsFooter{
        <script src="https://maps.googleapis.com/maps/api/js"></script>
        <script>
            //17.48302835544618, 106.60054635360801
            let map;

            function initMap() {
                map = new google.maps.Map(document.getElementById("map"), {
                    center: { lat: 17.48302835544618, lng: 106.60054635360801 },
                    zoom: 8,
                });
            }

        </script>
    }
    <section class="qc__about" >
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-7">
                    <h1 class="title-content">Giới thiệu She Accessories </h1>
                    @Html.Raw(Model.Content)
                </div>
                <div class="col-12 col-md-5">
                    <h2>Bản đồ</h2>
                    <div id="map">

                    </div>
                </div>
            </div>
        </div>
    </section>
    <style>
        /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
        #map {
            height: 700px;

        }

        /* Optional: Makes the sample page fill the window. */
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        .qc__about{
            margin-top:30px
        }
        .title-content {
            font-size: 1.625rem;
            border-bottom: 2px solid #b3b3b3;
            padding: 8px 0;
            margin-bottom: 10px;
        }
    </style>

    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDVCqf9lwDEu0GumZcyzzIJcgdlMAsfvC0&callback=initMap&libraries=&v=weekly"
            async></script>
    <script>
        let map;
        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 17.48302835544618, lng: 106.60054635360801 },
                zoom: 16,
            });

            // var image =
            // "https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png";
            // Add MARKER
            new google.maps.Marker({
                position: { lat: 17.48302835544618, lng: 106.60054635360801 },
                map,
                title: "DucY",
                // icon: image
            });
            // Add MARKER
            new google.maps.Marker({
                position: { lat: 17.48302835544618, lng: 106.60054635360801 },
                map,
                title: "She accessories",
            });
        }

    </script>