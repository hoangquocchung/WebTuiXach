    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="/Style/Client/css/lib/font-awesome.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="/Style/Client/css/header.css">
    <link href="/Style/Client/css/layout.css" rel="stylesheet" />
    <link href="/Style/Client/css/responsive.css" rel="stylesheet" />
    <link href="/Style/Client/css/ProductDetaitle.css" rel="stylesheet" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <style>
    </style>
</head>
<body>
    <!--HEADER-->
    <header class="qc__header">
        <div class="container">
            <div class="header">
                <div class="qc__header_top">
                    <div class="logo"><a href="/"><img src="/Style/Client/image/Logo_header.png" alt=""></a></div>
                    <div class="qc__form_search">
                        <form action="/tim-kiem" method="get" class="formsearch">
                            <div class="qc__form">
                                <input type="text" name="keyword" class="qc__search textsearch" placeholder="tìm kiếm ...">
                                <button type="submit" class="qc__btn_search"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>
                        </form>
                    </div>

                    @{Html.RenderAction("_Cart", "Home");}
                </div>
                <div class="qc__header_menu">
                    @{Html.RenderAction("MenuTop", "Home"); }
                </div>
            </div>

        </div>

    </header>

    @RenderBody()
    @{ Html.RenderAction("Logotrademark", "Home");}
    <!--FOOTER-->
    @{Html.RenderAction("Footer", "Home"); }
    <div class="qc__web_chung">
        <p>2021 bản quyền thuộc về She Accessories | Thiết kế website bởi Hoàng Quốc Chung</p>
    </div>

    <!-- jquery is file-->
    <script src="/Style/Client/js/jquery-3.5.1.js"></script>
    <!-- bootstrap is file-->
    <script src="/Style/Client/js/lib/bootstrap.min.js"></script>
    <script src="/Style/Client/owlcarousel/owl.carousel.js"></script>
    <script src="/Style/Client/Controller/ViewCountProduct.js"></script>
    <script src="/Style/Client/js/common.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
