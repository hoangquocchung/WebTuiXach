
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Quốc chung - Thiết kế website chuyên nghiệp</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0" />
    <meta name="theme-color" content="#fff" />

    <link rel="stylesheet" href="/Style/Client/owlcarousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="/Style/Client/owlcarousel/assets/owl.theme.default.min.css">
    <link rel="preconcert" href="https://fonts.gstatic.com">
