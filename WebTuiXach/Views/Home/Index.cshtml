        <div class="container">
            <div class="row c">
                <div class="col-12 col-md-6">
                    <div class="qc__qanda">
                        <div class="qc__title">
                            <h2 class="title">Hỏi đáp chuyên gia</h2>

                        </div>
                        <form action="" class="form_qanda">
                            <input type="text" placeholder="Họ & Tên" class="text_name_qa" />
                            <input type="text" placeholder="Số điện thoại" class="text_phone_qa" />
                            <input type="text" placeholder="Email..." class="text_email_qa" />
                            <textarea class="text_ghichu"></textarea>
                            <a href="#" id="qc__send_require" class="qc__btn__view">
                                <span></span>
